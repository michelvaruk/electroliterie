<form method="post" action="{{ path('app_edit_customer_delete', {'id': customer.id}) }}" onsubmit="return confirm('Attention, vous êtes sur le point de supprimer cette fiche client, en êtes-vous certain ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
	<button class="btn {{ className|default }}">Supprimer</button>
</form>