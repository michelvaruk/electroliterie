<form method="post" action="{{ path('app_edit_promotion_delete', {'id': promotion.id}) }}" onsubmit="return confirm('Attention, vous êtes sur le point de supprimer cette promotion, en êtes-vous certain ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.id) }}">
	<button class="btn {{ className|default }}">Supprimer</button>
</form>