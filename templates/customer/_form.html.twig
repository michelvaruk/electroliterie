{{ form_start(form) }}
{{ form_row(form.firstname) }}
{{ form_row(form.lastname) }}
<div class="col-12 col-md-6">
	<div class="col-12">
		{{ form_label(form.phone) }}
	</div>
	<div class="col-12" {{ stimulus_controller('international-phone' , {
			'locale' : app.request.locale,
			'countryData' : user.iso2 ?? 'fr'
		}) }}>
		{{ form_widget(form.phone) }}
		{{ form_row(form.iso2) }}
		{{ form_row(form.formattedPhone) }}
	</div>
</div>
{{ form_row(form.email) }}
{{ form_row(form.password) }}
<div class="flex justify-between">
	<button class="btn text-orange-700 hover:text-white border border-orange-700 hover:bg-orange-800 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:border-orange-500 dark:text-orange-500 dark:hover:text-white dark:hover:bg-orange-600 dark:focus:ring-orange-800 inline-block mt-8">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}